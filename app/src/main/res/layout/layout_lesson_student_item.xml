<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stu_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:padding="16dp"
    android:clickable="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/stu_item_icon_iv"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_default_avatar"
        app:civ_border_color="#FFCCCCCC"
        app:civ_border_width="3dp"/>

    <TextView
        android:id="@+id/stu_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/stu_item_icon_iv"
        android:layout_marginLeft="16dp"
        android:text="陈明填"
        android:textColor="#555555"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/stu_item_grade_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/stu_item_name_tv"
        android:layout_below="@id/stu_item_name_tv"
        android:text="12级软件工程"
        android:layout_marginTop="8dp"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/stu_item_account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="ID:3112006289"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/stu_item_college_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/stu_item_account_tv"
        android:layout_below="@id/stu_item_account_tv"
        android:text="计算机学院"
        android:textSize="14sp"/>







</RelativeLayout>