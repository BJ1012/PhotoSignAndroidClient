<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/offline_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:padding="16dp"
    android:clickable="true">

    <ImageView
        android:id="@+id/offline_item_icon_iv"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/offline_icon_64"/>

    <TextView
        android:id="@+id/offline_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/offline_item_icon_iv"
        android:layout_marginLeft="16dp"
        android:text="大一高等数学"
        android:textColor="#555555"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/offline_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/offline_item_name_tv"
        android:layout_below="@id/offline_item_name_tv"
        android:text="记录日期:2016/05/24"
        android:layout_marginTop="8dp"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/offline_item_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="记录数:46"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/offline_item_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/offline_item_count_tv"
        android:layout_below="@id/offline_item_count_tv"
        android:text="ID:001"
        android:textSize="14sp"/>







</RelativeLayout>