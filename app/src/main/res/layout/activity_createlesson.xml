        <!--</android.support.design.widget.TextInputLayout>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <Button
            android:id="@+id/createlesson_clean_btn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="7"
            android:background="@drawable/login_register_btn"
            android:text="@string/createlesson_clean"
            android:textColor="@color/colorPrimary" />

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/createlesson_create_btn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="7"
            android:background="@drawable/login_login_btn"
            android:text="@string/createlesson_create"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</LinearLayout>